<UserControl x:Class="ChatbotConstructorTelegram.View.UserControls.CustomTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatbotConstructorTelegram.View.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="400">

    <TextBox materialDesign:HintAssist.Hint="{Binding HintText}" Cursor="Arrow" Text="{Binding Text}"
             Padding="15,7,0,5" FontFamily="DejaVu Sans Light"
             materialDesign:HintAssist.Foreground="#7F93A9"
             Background="#FF1D3348" 
             Foreground="WhiteSmoke"
             Style="{DynamicResource MaterialDesignFloatingHintTextBox}" CaretBrush="White" 
             SelectionBrush="#FF528EBB" BorderBrush="Transparent"
    >
    </TextBox>
</UserControl>
